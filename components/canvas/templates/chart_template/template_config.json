{
  "id": "chart_template",
  "name": "Data Chart",
  "type": "component",
  "description": "Generates various chart types (bar, line, pie) with customizable data points and styling.",
  "tags": ["chart", "graph", "data", "visualization"],
  "zod_schema": "ChartProps",
  "tool": "chartRenderer",
  "confidence_threshold": 0.78,
  "template": "<Chart type={{{type}}} data={{{data}}} options={{{options}}} />",
  "example_prompt": "Create a bar chart showing monthly sales for Q1 2023",
  "example_props": {
    "type": "bar",
    "data": {
      "labels": ["January", "February", "March"],
      "datasets": [
        {
          "label": "Sales",
          "data": [12500, 19000, 15500],
          "backgroundColor": "rgba(75, 192, 192, 0.2)",
          "borderColor": "rgba(75, 192, 192, 1)",
          "borderWidth": 1
        }
      ]
    },
    "options": {
      "scales": {
        "y": {
          "beginAtZero": true
        }
      }
    }
  },
  "fallback_html": "<div class='p-5 bg-white rounded-lg shadow'><h2 class='text-xl font-bold mb-3'>Data Chart</h2><p class='text-gray-500'>Unable to generate a detailed chart. Please try again with more specific data points.</p></div>"
} 